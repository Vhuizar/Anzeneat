    <!-- Modal -->
    <div class="modal fade" id="myModalChina" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:rgb(139, 0, 0, 65%);">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="myModalLabel" style="color: white;">Restaurante Chino: {{lucky.name}}</h2>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 style="color: white;">Ubicacion de google maps</h4>
                            <br>
                            <img src="/img/china/ubi1.jpg" alt="">
                            <br>
                            <br>
                            <br>
                            <span class="glyphicon glyphicon-map-marker" aria-hidden="true" style="color: white;">{{lucky.address}}</span>
                        </div>
                        <div class="col-md-6">
                            <!-- carrusel -->
                            <div id="myCarouselC" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarouselC" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarouselC" data-slide-to="1"></li>
                                    <li data-target="#myCarouselC" data-slide-to="2"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner">

                                    <div class="item active">
                                        <img src="/img/china/ch1.jpg" alt="">
                                    </div>

                                    <div class="item">
                                        <img src="/img/china/ch2.jpg" alt="">
                                    </div>

                                    <div class="item">
                                        <img src="/img/china/ch3.jpg" alt="">
                                    </div>

                                </div>

                            </div>
                            <br>
                            <br>

                            <p style="color: white;">
                                {{lucky.description}}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="/links/reservacion/{{lucky.id}}" type="button" class="btn btn-primary">Hacer Reservacion</a>
                </div>
            </div>
        </div>
